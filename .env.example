#######################################
# DeepProduct 环境变量配置文件示例
# 1. 复制此文件为 .env
# 2. 填入你的API密钥和相关配置
#######################################

#######################################
# 系统配置
#######################################
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 模型配置文件路径 (可选，默认为config/model_providers.yaml)
# MODEL_CONFIG_PATH=config/model_providers.yaml

# 代理配置 (如果需要)
# HTTP_PROXY=http://127.0.0.1:7890
# HTTPS_PROXY=http://127.0.0.1:7890

#######################################
# 模型提供商API密钥
#######################################

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude) API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google (Gemini) API
GEMINI_API_KEY=your_gemini_api_key_here

# DeepSeek API
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenRouter API
OPENROUTER_API_KEY=your_openrouter_api_key_here

# 阿里云通义千问 API
QWEN_API_KEY=your_qwen_api_key_here

# 豆包(月之暗面) API
DOUBAO_API_KEY=your_doubao_api_key_here

#######################################
# 存储配置
#######################################

# Redis配置 (用于记忆存储)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Memory配置 (用于短期记忆 可选：memory, redis)
# MEMORY_MODE=redis 
MEMORY_MODE=memory

# MongoDB配置 (可选，用于更复杂的数据存储)
# MONGODB_URI=mongodb://localhost:27017/deepproduct

#######################################
# 性能与稳定性配置
#######################################

# API请求超时时间(秒)
REQUEST_TIMEOUT=180

# API请求重试次数
API_RETRY_ATTEMPTS=3

# 最大并行Agent数量
MAX_CONCURRENT_AGENTS=5
